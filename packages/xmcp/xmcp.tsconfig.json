{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "typeRoots": ["../node_modules/@types", "./node_modules/@types", "./types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/types/declarations.d.ts",
    "src/types/adapter.d.ts",
    "src/index.ts",
    "src/utils.ts"
  ]
}
